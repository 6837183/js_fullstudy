.menu{
    /* width: 148rpx; */
    width: 20%;
    height: 100vh;
    border-right: 1rpx solid black;
    position:fixed;
}
.menu-name{
    /* margin: 60rpx 40rpx; */
    height: 88rpx;
    width: 150rpx;
   line-height: 88rpx;
   padding: 16rpx 10rpx 10rpx 40rpx;
    position: relative;
   
}
.right{
    height: 100vh;
    margin-left: 20%;
    /* width: 600rpx; */
    width: 80%;
}

.wrapper {
    width:100%;
    height: 100vh;
    padding: 30rpx;
    box-sizing: border-box;
}

.contents {
    width: 95%;
    height: 240rpx;
    margin: 0 auto;
}

.contents image {
    width: 100%;
    height: 100%;
}

.title {
    text-align: center;
    padding: 20rpx 0;
}

.food {
    width: 33%;
    height: 120rpx;
    float: left;
    text-align: center;
    margin: 20rpx 0;
    padding: 20rpx;
    box-sizing: border-box;
}

.food text {
    display: block;
    margin-top: 20rpx;
}

.food-img {
    width: 60rpx;
    height: 60rpx;
    margin: 0 auto;
}

.food-img image {
    width: 100%;
    height: 100%;
}
.box{
    position: absolute;
    width: 4rpx;
    height: 60rpx;
    top: 25rpx;
    left: 0;
    background-color: #ad8c60;
}